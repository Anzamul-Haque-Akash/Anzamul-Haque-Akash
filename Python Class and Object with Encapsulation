#Encapsulation in Python.
class Person: #class name Python.
    def __init__(self, parson_name: str, date_of_birth: str, height: float):
        self.__name = parson_name #__ for private var
        self.birth = date_of_birth # not provate.
        self.__height = height

    def __chack_name(self, str):
        return '0' in str

    def set_name(self, name):
        if self.__chack_name(name):
            print("Sorry person name can't have any number.")
            return
        self.__name = name

    def get_summary(self):
        return f"Name : {self.__name}, DOB : {self.birth}, Height : {self.__height}"

person1 = Person("Akash", 1997, 5.6)
print(person1.get_summary())
print(person1.set_name('Anzamul Haque Akash'))
print(person1.get_summary())
